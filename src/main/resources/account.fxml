<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml" styleClass="accountContainer" stylesheets="@css/account.css">
    <ImageView fx:id="avatarView" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image fx:id="avatar" url="@/images/avatar-default.png"/>
        </image>
    </ImageView>
    <VBox>
        <Label fx:id="accountName" styleClass="accountName">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <Label fx:id="serverName" styleClass="serverName">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>
    </VBox>
</HBox>